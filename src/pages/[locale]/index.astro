---
import { LocalePath } from '~/utils/StaticPathHelper';
export function getStaticPaths() {return LocalePath();}

import Layout from "~/layouts/PageLayout.astro"
import i18n from '~/components/i18n/index.js';
import { getLanguageFromPath } from '~/config.js'
import WorldMap from 'astro-worldmap-choropleth';
import bal from "../../data/country_data.json"

const locale = getLanguageFromPath(Astro.url)
const t = i18n[locale]
const {content} = Astro.props

---

<Layout meta={{title:t?.home ?? "Home", description: t?.cs_tagline ?? '' }}>
    <div class="relative">

        <WorldMap 
        countryDetails={bal}
        dataViews={[
          {
            id: "access",
            label: "Access Ranking",
            fields: { primary: "access_rank" },
            classes: { primary: "is-access-rank" }
          },
          {
            id: "needs",
            label: "Needs Ranking",
            fields: { primary: "needs_rank" },
            classes: { primary: "is-needs-rank" }
          }
        ]}
        normalizedFields={['access_rank', 'needs_rank']}
        mode="modal"
        defaultView="access"
      >
        <div slot="modal-content" class="grid grid-cols-6 gap-4">

          <div class="data-wrapper-country col-span-6 bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-xl p-6 border border-blue-100 dark:border-blue-800">
            <div class="flex items-center justify-between">
              <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white" data-fill="countryData.country">Country Name</h1>
                <p class="text-lg text-gray-600 dark:text-gray-300 mt-1">Country Code: <span data-fill="isoCode">XX</span></p>
                <p class="text-sm text-gray-500 dark:text-gray-400" data-fill="countryData.region">Region</p>
              </div>
              <div>
                <a data-fill="isoCode" data-format="link" class="rounded-sm bg-blue-500 px-2 py-1 text-xs font-semibold text-white hover:bg-blue-400 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-500" href={`/${locale}/countries/`}>Profile Page</a>
              </div>
            </div>
          </div>

          <div class="data-wrapper-population col-span-3 bg-emerald-50 dark:bg-emerald-900/20 rounded-xl p-5 border border-emerald-100 dark:border-emerald-800">
            <h3 class="font-bold text-emerald-800 dark:text-emerald-200 mb-3 flex items-center">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Population
            </h3>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-600 dark:text-gray-300">Total</span>
                <span class="font-semibold text-gray-900 dark:text-white" data-fill="countryData.pop_total" data-format="number">0</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600 dark:text-gray-300">Christian</span>
                <span class="font-semibold text-gray-900 dark:text-white" data-fill="countryData.pop_christian" data-format="number">0</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600 dark:text-gray-300">Christian %</span>
                <span class="font-semibold text-emerald-600 dark:text-emerald-400" data-fill="countryData.pct_christian">0%</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600 dark:text-gray-300">Church Growth</span>
                <span class="font-semibold text-emerald-600 dark:text-emerald-400" data-fill="countryData.church_growth">0%</span>
              </div>
            </div>
          </div>

          <!-- Access Ranking (3 columns) -->
          <div class="data-wrapper-access col-span-3 bg-blue-50 dark:bg-blue-900/20 rounded-xl p-5 border border-blue-100 dark:border-blue-800">
            <h3 class="font-bold text-blue-800 dark:text-blue-200 mb-3 flex items-center">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4z"/>
              </svg>
              Access Ranking
            </h3>
            <div class="text-center mb-4">
              <div class="text-3xl font-bold text-blue-600 dark:text-blue-400">#<span data-fill="countryData.access_rank">0</span></div>
              <div class="text-sm text-gray-500 dark:text-gray-400">Global Rank</div>
            </div>
            <div class="space-y-2">
              <div class="flex justify-between">
                <span class="text-gray-600 dark:text-gray-300">Total Points</span>
                <span class="font-semibold text-gray-900 dark:text-white" data-fill="countryData.access_points_total">0</span>
              </div>
              <div class="text-sm text-gray-500 dark:text-gray-400 bg-blue-100 dark:bg-blue-800/30 rounded p-2" data-fill="countryData.access_desc">
                No description available
              </div>
            </div>
          </div>

          <!-- Bible Translation (4 columns) -->
          <div class="data-wrapper-translation col-span-4 bg-purple-50 dark:bg-purple-900/20 rounded-xl p-5 border border-purple-100 dark:border-purple-800">
            <h3 class="font-bold text-purple-800 dark:text-purple-200 mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Bible Translation Status
            </h3>
            <div class="grid grid-cols-2 gap-4">
              <div class="space-y-3">
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-300">Total Languages</span>
                  <span class="font-bold text-purple-600 dark:text-purple-400" data-fill="countryData.lang_total">0</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-300">Full Bible</span>
                  <span class="font-semibold text-green-600 dark:text-green-400" data-fill="countryData.lang_full_bible">0</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-300">New Testament</span>
                  <span class="font-semibold text-blue-600 dark:text-blue-400" data-fill="countryData.lang_nt">0</span>
                </div>
              </div>
              <div class="space-y-3">
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-300">Portions</span>
                  <span class="font-semibold text-yellow-600 dark:text-yellow-400" data-fill="countryData.lang_portion">0</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-300">None</span>
                  <span class="font-semibold text-red-600 dark:text-red-400" data-fill="countryData.lang_none">0</span>
                </div>
                <div class="text-sm text-gray-500 dark:text-gray-400 mt-2">
                  <div>Priority: <span data-fill="countryData.bible_prio1">N/A</span>, <span data-fill="countryData.bible_prio2">N/A</span></div>
                </div>
              </div>
            </div>
          </div>

          <div class="data-wrapper-needs col-span-2 bg-amber-50 dark:bg-amber-900/20 rounded-xl p-5 border border-amber-100 dark:border-amber-800">
            <h3 class="font-bold text-amber-800 dark:text-amber-200 mb-3 flex items-center">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z"/>
              </svg>
              Needs
            </h3>
            <div class="text-center mb-3">
              <div class="text-2xl font-bold text-amber-600 dark:text-amber-400"><span data-fill="countryData.needs_count" data-format="millions">0</span>M</div>
              <div class="text-xs text-gray-500 dark:text-gray-400">People in Need</div>
            </div>
            <div class="text-xs text-gray-500 dark:text-gray-400 bg-amber-100 dark:bg-amber-800/30 rounded p-2 text-center" data-fill="countryData.needs_range_desc">
              No data available
            </div>
          </div>

        </div>
      </WorldMap>

    </div>

	<div class="bg-white dark:bg-stone-900 py-24 sm:py-32">
		<div class="mx-auto max-w-7xl px-6 lg:px-8">
		  <div class="grid grid-cols-1 items-center gap-x-8 gap-y-16 lg:grid-cols-2">
			<div class="mx-auto w-full max-w-xl lg:mx-0">
			  <img class="max-h-16 w-full object-contain object-left" src="https://bibleaccesslist.org/images/logo/bai_logo_title.webp" alt="Bible Access Initative" />
			  <p class="mt-6 text-lg/8 text-stone-600">Advancing the Worldwide Distribution and Multiplication of Bible Resources through strategic research, collaboration, and a shared passion for Godâ€™s Word. The Bible Access Initiative is a growing collobrative of ministry partners committed to focusing efforts toward insuring God's Word is globally accessible and available.</p>
			  <div class="mt-8 flex items-center gap-x-6">
				<a href="#" class="rounded-md bg-orange-700 px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-orange-800 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Join Us!</a>
				<a href="#" class="text-sm font-semibold text-stone-900">Contact Us <span aria-hidden="true">&rarr;</span></a>
			  </div>
			</div>
			<div class="mx-auto grid w-full max-w-xl grid-cols-2 items-center gap-x-4 gap-y-6 md:gap-y-8 lg:mx-0 lg:max-w-none lg:pl-8">
			  <a href="https://www.bibleleague.org/" target="_blank" rel="noopener noreferrer" title="Bible League International"><img class="max-h-16 w-full object-contain object-center" src="https://bibleaccesslist.org/images/logo/bli.svg" alt="Bible League International" width="130" /></a>
			  <a href="https://www.dbs.org/" target="_blank" rel="noopener noreferrer" title="Digital Bible Society"><img class="max-h-12 w-full object-contain object-center" src="https://bibleaccesslist.org/images/logo/dbs_banner.svg" alt="Digital Bible Society" width="104" height="48" /></a>
			  <a href="https://closethebiblegap.com/" target="_blank" rel="noopener noreferrer" title="Bible League International"><img class="max-h-16 w-full object-contain object-center" src="https://bibleaccesslist.org/images/logo/ctbg.svg" alt="Close the Bible Gap" width="140" height="48" /></a>
			  <a href="https://frontlinesinternational.org/" target="_blank" rel="noopener noreferrer" title="Frontlines International"><img class="max-h-16 w-full object-contain object-center" src="https://bibleaccesslist.org/images/logo/frontlines.svg" alt="Frontlines International" width="136" height="48" /></a>
			  <a href="https://www.opendoors.org/" target="_blank" rel="noopener noreferrer" title="Bible League International"><img class="max-h-10 w-full object-contain object-center" src="https://bibleaccesslist.org/images/logo/odi.svg" alt="Open Doors" width="136" height="48" /></a>
			</div>
		  </div>
		</div>
	  </div>
</Layout>
